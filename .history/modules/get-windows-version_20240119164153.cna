sub getVersion {
    local ('$bid $version $winver');

    $bid = $1;
    $version = binfo($bid, 'ver');

    if ($version eq "6.1") {
        $winver = "Win7 or 2008";
    }
    else if ($version eq "6.2") {
        $winver = "Win8 or 2012";
    }
    else if ($version eq "6.3") {
        $winver = "Win8.1 or 2012 R2";
    }
    else if ($version eq "10.0") {
        $winver = "Win10 or 2016";
    }
    else {
        $winver = "Unknown version";
    }

    bnote($bid, "OS: $winver");
}

